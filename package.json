{
  "name": "aiformat",
  "version": "0.2.4",
  "description": "AI Format is a tool that helps you format your code using AI",
  "license": "MIT",
  "bin": "dist/cli.js",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/farouqaldori/aiformat.git"
  },
  "scripts": {
    "build": "node syncVersion.mjs && tsc",
    "dev": "node syncVersion.mjs && tsc --watch",
    "test": "prettier --check . && xo && ava",
    "sync-version": "node syncVersion.mjs"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@npmcli/package-json": "^5.1.1",
    "clipboardy": "^4.0.0",
    "fast-ignore": "^1.1.3",
    "figures": "^6.1.0",
    "ink": "^4.1.0",
    "meow": "^11.0.0",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^3.0.1",
    "@types/npmcli__package-json": "^4.0.4",
    "@types/react": "^18.0.32",
    "@vdemedes/prettier-config": "^2.0.1",
    "ava": "^5.2.0",
    "chalk": "^5.2.0",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "ink-testing-library": "^3.0.0",
    "oo-ascii-tree": "^1.98.0",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3",
    "xo": "^0.53.1"
  },
  "ava": {
    "extensions": {
      "ts": "module",
      "tsx": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "xo": {
    "extends": "xo-react",
    "prettier": true,
    "rules": {
      "react/prop-types": "off"
    }
  },
  "prettier": "@vdemedes/prettier-config"
}